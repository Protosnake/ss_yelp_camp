<% include partials/header %>
<div id="form" class="container">
  <h1 class="text-center">Log into your account</h1>
    <form action="/login" method="post">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" name="username" placeholder="Your username goes here">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" placeholder="Your password goes here">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-wide">Log in</button>
      </div>
      <div class="text-center">
        <p>Forgot your password?</p>
        <a href="/recovery">Recover it here!</a>
      </div>
    </form>
</div>
<% include partials/footer %>
