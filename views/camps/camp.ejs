<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">
        Yelp Camp
      </p>
      <div class="list-group">
        <li class="list-group-item active">Item 1</li>
        <li class="list-group-item">Item 2</li>
        <li class="list-group-item">Item 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%=camp.image%>">
        <div class="caption-full">
          <h4 class="pull-right">$9.99/night</h4>
          <h4><a><%= camp.name %></a></h4>
          <p><%= camp.description %></p>
          <p><em>Submitted by <%= camp.author.username %></em></p>
          <a class="btn btn-warning" href="/camps/camp/<%=camp._id%>/edit">Edit camp!</a>
          <form id="delete-form" class="" action="/camps/camp/<%=camp._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/camps/camp/<%=camp._id%>/comments/new">Add new comment</a>
        </div>
        <hr>
        <% camp.comments.forEach(comment => { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%=comment.author.username%></strong>
              <span class="pull-right">10 days ago</span>
              <p>
                <%=comment.text%>
              </p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>


<% include ../partials/footer %>
