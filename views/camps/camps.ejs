<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to the Yelp Camps!</h1>
      <p>View out hand-picked camps from all over the world!</p>
      <p><a class="btn btn-primary btn-large" href="/camps/new">Add a new camp!</a></p>
    </div>
  </header>
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% camps.forEach(function (camp) { %>
      <div class='col-md-3 col-sm-12'>
        <div class="thumbnail">
          <img src="<%= camp.image %>">
          <div class="caption">
            <h4><%= camp.name %></h4>
            <a class="btn btn-primary btn-large"href="/camps/camp/<%= camp._id %>">More info</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
